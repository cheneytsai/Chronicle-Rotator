!!! 5
html(lang="en")
	head
		title Container Demo
		link(rel='stylesheet', href='reset.css')
		link(rel='stylesheet', href='styles.css')
		script(src='jquery.js')
		script(src='rotator.js')
	.body
		#main.container
			.main_image
				img(src=elements[0].imageUrl, alt="- banner1") 
				.desc
					a.collapse(href="#", class="collapse") Close Me! 
					.block
						h2 #{elements[0].headline}
						small #{elements[0].date}
						
						p!= elements[0].caption
			.image_thumb
				ul 		
					- each element in elements
						li
							a(href=element.imageUrl)
							.block
								h2 #{element.headline}
								small #{element.date}
								
								p!= element.caption
