body
	background #1d1d1d
	margin 0 padding 0
	font 10px normal Arial, Helvetica, sans-serif

*
	margin 0 padding 0 outline none
img
	border none
	
h1
	font 3em normal Georgia, "Times New Roman", Times, serif
	color #fff
	text-align center
	background url(h1_bg.gif) no-repeat
	text-indent -99999px
	margin 100px 0 10px

a
	color #fff
	
.container
	overflow hidden
	width 900px
	margin 0 auto

#main
	padding 10px
	background #f0f0f0
	border 1px solid #ccc


.main_image
	width 598px 
	height 456px
	float left
	background #333
	position relative
	overflow hidden
	color #fff

	h2
		font-size 2em
		font-weight normal
		margin 0 0 5px
		padding 10px
	p
		font-size 1.2em
		padding 10px
		margin 0px
		line-height 1.6em
	.block small
		margin-left 10px
	.desc
		position absolute
		bottom 0
		left 0
		width 100%
		display none
	.block
		width 100%
		background #111
		border-top 1px solid #000
	a.collapse
		background url(images/btn_collapse.gif) no-repeat left top
		height 27px
		width 93px
		text-indent -99999px
		position absolute 
		top -27px
		right 20px
	a.show
		background-position left bottom
		
.block small 
	padding 0 0 0 20px 
	background url(icon_calendar.gif) no-repeat 0 center 
	font-size 1em 

.image_thumb
	float left
	width 299px
	background #f0f0f0
	border-right 1px solid #fff
	border-top 1px solid #ccc

	img
		border 1px solid #ccc 
		padding 5px 
		background #fff 
		float left

	ul
		margin 0 padding 0
		list-style none

		li
			margin 0
			padding 12px 10px
			background #f0f0f0 url(nav_a.gif) repeat-x
			width 279px
			float left
			border-bottom 1px solid #ccc
			border-top 1px solid #fff
			border-right 1px solid #ccc

		li.hover
			background #ddd
			cursor pointer

		li.active
			background #fff
			cursor default

html .image_thumb ul li h2
	font-size 1.5em 
	margin 5px 0 padding 0

.image_thumb 
	ul li 
		.block
			float left 
			margin-left 10px
			padding 0
			width 170px
	
		p
			display none